<div class="privacy py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>H</span>ồ sơ
        </h3>
        <div class="user-info-wrapper">
            <form class="form" action="" method="post">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="user_name">Tên người dùng:</label>
                        <input type="text" class="form-control" id="user_name" name="user" value="{{default user.firstName user.lastName "..."}} {{user.lastName}}" disabled>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="user_userId">User ID:</label>
                        <div class="" id="user_userId">{{user.userId}}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="user_gender">Giới tính:</label>
                        <input type="text" class="form-control" id="user_gender" name="user_gender" value="{{default user.gender "..."}}" disabled>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="user_tk">Tên tài khoản:</label>
                        <div class="" id="user_tk">{{user.username}}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="user_birthDate">Ngày sinh:</label>
                        <input type="date" class="form-control" id="user_birthDate" name="user_birthDate" value="{{parseDateInput user.birthDate "-"}}" disabled>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="user_type">Loại tài khoản:</label>
                        <div class="" id="user_type">{{default user.typeStr "..."}}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="user_email">Email:</label>
                        <input type="email" class="form-control" id="user_email" name="user_email" value="{{default user.email "..."}}" disabled>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="user_createdDate">Ngày đăng ký:</label>
                        <div class="" id="user_createdDate">{{parseDateTime user.createdDate "/"}}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="user_address">Địa chỉ:</label>
                        <textarea class="form-control" id="user_address" name="user_address" rows="3" disabled>{{default user.address "..."}}</textarea>
                    </div>
                    <div class="form-group col-md-6">
                        <button type="submit" class="btn btn-success my-btn-link" style="font-size: 1.1em;"><a href="/edit_profile">Cập nhật thông tin</a></button>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="user_phone">Số điện thoại:</label>
                        <input type="tel" class="form-control" id="user_phone" name="user_phone" value="{{default user.phone "..."}}" disabled>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="user_city">Tỉnh thành:</label>
                        <select id="user_city" class="form-control" name="user_city" disabled>
                            <option selected>{{default user.city "..."}}</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
